
{%
    set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    image_focus,
    (hide_time ? 'hide-time')
]
%}

{% if extra_classes %}
    {% set classes = classes|merge(extra_classes) %}
{% endif %}

{%
    set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
]
%}

{% if label_hidden %}

    {% if multiple %}

        <div{{ attributes.addClass(classes, 'field__items') }}>

            {% if slider %}
            <div class="slides-wrap">
                {% endif %}

                {% for item in items %}

                    {% if item.url %}
                        <a {{ item.attributes.addClass('field__item') }} href="{{ item.url }}">
                            {{ item.content }}
                        </a>
                    {% else %}
                        <div{{ item.attributes.addClass('field__item') }}>
                            {{ item.content }}
                        </div>
                    {% endif %}

                {% endfor %}

                {% if slider %}
            </div>
            <div class="slick-arrows"></div>
            <div class="slick-count"><span class="current">1</span><span class="divider">/</span><span class="total"></span></div>
            {% endif %}

        </div>

    {% else %}

        {% for item in items %}

            {% if item.url %}
                <a {{ attributes.addClass(classes, 'field__item') }} href="{{ item.url }}" {% if item.target %}target="{{ item.target }}"{% endif %}>
                    {{ item.content }}
                </a>

            {% elseif item.content_override %}
                <div{{ attributes.addClass(classes, 'field__item') }}>
                    {{ item.content_override }}
                </div>

            {% elseif item.element %}
                <{{ item.element }} {{ attributes.addClass(classes, 'field__item') }}>
                    {{ item.content }}
                </{{ item.element }}>

            {% else %}
                <div{{ attributes.addClass(classes, 'field__item') }}>

                    {% if field_wrapper %}
                        <div class="field__inner">
                            {{ item.content }}
                        </div>
                    {% else %}
                        {{ item.content }}
                    {% endif %}

                </div>

            {% endif %}

        {% endfor %}

    {% endif %}

{% else %}

    <div{{ attributes.addClass(classes) }}>
        <div{{ title_attributes.addClass(title_classes) }}>{{ label }}</div>

        {% if multiple %}
        <div class="field__items">
        {% endif %}

            {% for item in items %}

                {% if item.url %}
                    <a {{ item.attributes.addClass('field__item') }} href="{{ item.url }}" {% if item.target %}target="{{ item.target }}"{% endif %}>
                        {{ item.content }}
                    </a>

                {% elseif item.content_override %}
                    <div{{ item.attributes.addClass('field__item') }}>
                        {{ item.content_override }}
                    </div>

                {% else %}
                    <div{{ item.attributes.addClass('field__item') }}>
                        {{ item.content }}
                    </div>

                {% endif %}

            {% endfor %}

        {% if multiple %}
        </div>
        {% endif %}

    </div>

{% endif %}
