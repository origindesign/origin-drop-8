
{% set extra_class = ( has_hero_image ) ? "with-image" : "no-image" %}


<div class="hero {{ extra_class }} ">

    {% if has_hero_image %}

        <h1>{{ label|field_value }}</h1>
        <h2>{{ content.field_subtitle }}</h2>

        {% if type == "event" %}
            <div class="date-detail">
                {{ displayFromToDates(date_from, date_to, 'j', 'F') }}
            </div>
        {% endif %}

        <div class="image">
            {{ content.field_main_image }}
        </div>


    {% else %}

        <h1>{{ label|field_value }}</h1>
        <h2>{{ content.field_subtitle }}</h2>

    {% endif %}

    {% if edit_event_master %}
        <a class="button edit-event-master" href="/node/{{ node.field_event_reference[0].target_id }}/edit?destination=/node/{{ nid }}">Edit Master Event</a>
    {% endif %}

</div>
