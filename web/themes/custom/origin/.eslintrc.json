{
    "extends": "eslint-config-airbnb",
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "Drupal": true,
        "drupalSettings": true,
        "drupalTranslations": true,
        "domready": true,
        "jQuery": true,
        "_": true,
        "matchMedia": true,
        "Backbone": true,
        "Modernizr": true,
        "CKEDITOR": true,
        "TweenMax": true,
        "objectFitImages": true,
        "moment": true
    },
    "rules": {
        "no-console": 0,
        "max-len": [0],
        "no-restricted-syntax": [1],
        "guard-for-in": [1],
        "no-useless-escape": [0],
        "indent": ["error", 4],
        "consistent-return": [0],
        "no-underscore-dangle": [0],
        "max-nested-callbacks": [1, 4],
        "import/no-mutable-exports": [1],
        "no-plusplus": [1, {
            "allowForLoopAfterthoughts": true
        }],
        "no-param-reassign": [0],
        "no-prototype-builtins": [0],
        "valid-jsdoc": [0],
        "brace-style": ["error", "stroustrup"],
        "no-unused-vars": [1],
        "prefer-destructuring": ["error", {"object": false, "array": false}],
        "func-names": 0,
        "prefer-rest-params": [0]
    }
}
