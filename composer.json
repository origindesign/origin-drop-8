{
    "name": "origindesign/origin-drupal-8",
    "description": "Install Origin starting Install of Drupal 8 with Composer.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=7.2",
        "bower-asset/lazysizes": "^5.2",
        "composer/installers": "^1.0.20",
        "cweagans/composer-patches": "^1.0",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "drupal/address": "^1.3",
        "drupal/admin_toolbar": "^2.0",
        "drupal/advagg": "^4.0",
        "drupal/components": "^2.0",
        "drupal/config_direct_save": "^1.0",
        "drupal/console": "^1",
        "drupal/core": "^8.7",
        "drupal/ctools": "^3.0",
        "drupal/devel": "^4.0",
        "drupal/editor_advanced_link": "^1.4",
        "drupal/entity_usage": "^2.0@beta",
        "drupal/field_group": "^3.0",
        "drupal/hsts": "^1.0",
        "drupal/jquery_ui_datepicker": "^1.0",
        "drupal/lazy": "^3.4",
        "drupal/link_attributes": "^1.5",
        "drupal/linkit": "^6.0",
        "drupal/menu_block": "^1.5",
        "drupal/metatag": "^1.5",
        "drupal/paragraphs": "^1.2",
        "drupal/pathauto": "^1.2",
        "drupal/redirect": "^1.2",
        "drupal/redis": "^1.0",
        "drupal/role_delegation": "^1.0",
        "drupal/simple_block": "^1.0@beta",
        "drupal/sitemap": "^2.0",
        "drupal/smart_trim": "^1.1",
        "drupal/tinypng": "^1.0@alpha",
        "drupal/token": "^1.0",
        "drupal/twig_field_value": "^2.0",
        "drupal/twig_tweak": "^2.4",
        "drupal/upgrade_status": "^2.9",
        "drupal/view_unpublished": "^1.0",
        "drupal/views_bulk_edit": "^2.4",
        "drupal/views_bulk_operations": "^3.3",
        "drupal/weight": "^3.1",
        "drupal/xmlsitemap": "^1.0@alpha",
        "drush-ops/behat-drush-endpoint": "^0.0.5",
        "drush/drush": "8.*",
        "hirak/prestissimo": "^0.3.8",
        "kint-php/kint": "^3.3",
        "oomphinc/composer-installers-extender": "^1.0",
        "origindesign/efq": "^2.0",
        "origindesign/helper": "^2.0",
        "pantheon-systems/quicksilver-pushback": "~1",
        "rvtraveller/qs-composer-installer": "^1.1",
        "tinify/tinify": "1.4.*",
        "webflo/drupal-core-strict": "^8"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.2",
        "behat/behat": "3.*",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "drupal/drupal-extension": "^3.1",
        "phpunit/phpunit": "^4.8",
        "symfony/css-selector": "^2.8"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "bash scripts/composer/post-create-project.sh"
        ]
    },
    "extra": {
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library", "type:bower-asset", "type:npm-asset"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes",
                "drush pm-enable config_direct_save simple_block admin_toolbar features --yes",
                "drush pm-uninstall block_content --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
            "includes": [
                "sites/default/default.services.pantheon.preproduction.yml",
                "sites/default/settings.pantheon.php"
            ],
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".htaccess",
                "web.config"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        },
        "process-timeout":0
    }
}
